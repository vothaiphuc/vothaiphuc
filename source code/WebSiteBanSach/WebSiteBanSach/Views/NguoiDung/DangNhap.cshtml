
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2 style="text-align:center;font-size:30px;">
    Đăng nhập
</h2>
<h4 style="text-align: center">@ViewBag.bao</h4>
<h4 style ="text-align: center">@ViewBag.ThongBao</h4>
<div class="dangnhap">
    @using (Html.BeginForm())
    {   <span>Tài khoản :</span> <br />
        @Html.TextBox("txtTaiKhoan");
        <br />
        <span>Mật khẩu:</span><br />
        <input name="txtMatKhau" id="txtMatKhau" type="password" />
        <br />
        <input type="submit" id="btnSubmit" name="btnSubmit" value="Đăng Nhập" />
        

    }
</div>

<style>
    .dangnhap {
        margin-left: 400px;
        margin-right: 400px;
        padding-left: 150px;
        border: 2px solid;
      
    }
    #btnSubmit {
        margin-bottom: 10px;
        margin-left: -12px;
        width: 100px;
        height: 30px;
        margin-top: 20px;
    }
    #txtTaiKhoan {
        border: 4px solid #ccc;
    }
    #txtMatKhau {
        border: 4px solid #ccc;
    }

     
</style>

