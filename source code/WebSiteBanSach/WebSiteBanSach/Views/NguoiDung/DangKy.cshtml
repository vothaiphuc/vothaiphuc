<script type="text/javascript">
    function  MyFunction() {
        var a = document.getElementById("txtHoTen").value;
        var b = document.getElementById("txtDienThoai").value;
        var c = document.getElementById("txtTaiKhoan").value;
        var d = document.getElementById("XacNhanMatKhau").value;
        var e = document.getElementById("txtEmail").value;
        var f = document.getElementById("txtDiaChi").value;
        if (a!="" && b!="" &&c!="" &&d!="" &&e!="" &&f!="")
        {
            alert("Đăng ký thành công !");
        }
    }
</script>
  
        

